page {
	display: flex;
	flex-direction: column;
	height: 100%;
	font-size: 28rpx;
	color: #333333;
}
.main {
	display: flex;
	flex-direction: column;
	height: 100%;
}
.tab {
	display: flex;
	align-items: center;
	height: 150rpx;
	padding: 0 24rpx;
	border-top: 20rpx solid #F5F6F7;
	border-bottom: 20rpx solid #F5F6F7;
	box-sizing: border-box;
}
.tab view {
	width: 84rpx;
	height: 54rpx;
	margin-right: 18rpx;
	text-align: center;
	line-height: 54rpx;
	font-size: 28rpx;
	background: #F4F4F4;
	border: 1rpx solid #F4F4F4;
	border-radius: 27px;
}
.tab view.active {
	color: #EF2400;
	background-color: #FEF2EF;
	border: 1rpx solid #EF2400;
}
.comment-list {
	padding: 40rpx 24rpx;
	box-sizing: border-box;
}
.comment-item {
	margin-bottom: 90rpx;
}
.comment-item:last-child {
	margin-bottom: 0rpx;
}
.comment-user {
	display: flex;
	align-items: center;
	margin-bottom: 25rpx;
	font-size: 24rpx;
}
.comment-user image {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	margin-right: 16rpx;
}
.comment-user view {
	display: flex;
	flex-direction: column;
}
.comment-user .color {
	margin-top: 10rpx;
	color: #999999;
}
.comment-content {
	line-height: 46rpx;
}

.comment-img {
	display: flex;
	flex-wrap: wrap;
	margin-top: 30rpx;
}
.comment-img view {
	position: relative;
	overflow: hidden;
	width: 226rpx;
	height: 226rpx;
	margin-right: 12rpx;
	margin-bottom: 12rpx;
	border-radius: 8rpx;
}
.comment-img view:nth-child(3n) {
	margin-right: 0rpx;
}
.comment-img view image {
	position: absolute;
	left: 50%;
	top: 50%;
	width: 100%;
	height: auto;
	transform: translate(-50%, -50%);
}
.loading-wrap {
	height: 90rpx;
}
.no-more {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 90rpx;
	font-size: 24rpx;
	color: #999999;
}
.no-more text {
	position: relative;
}
.no-more text::before {
	position: absolute;
	left: -50%;
	top: 50%;
	transform: translateY(-50%);
	width: 60rpx;
	height: 2rpx;
	background-color: #cccccc;
	content: '';
}
.no-more text::after {
	position: absolute;
	right: -50%;
	top: 50%;
	transform: translateY(-50%);
	width: 60rpx;
	height: 2rpx;
	background-color: #cccccc;
	content: '';
}
