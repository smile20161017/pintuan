page {
	font-size: 26rpx;
	color: #333333;
	background-color: #F5F6F7;
}
.container {
	position: relative;
	margin: 40rpx 24rpx 0;
	box-sizing: border-box;
	background-color: #FFFFFF;
	border-radius: 12rpx;
	box-shadow:0px 6rpx 21rpx 0px #e0e0e0;
}
.container > view {
	box-sizing: border-box;
	width: 100%;
	padding: 0 24rpx 0;
}
.name {
	display: flex;
	align-items: center;
	height: 90rpx;
}
.name .type {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 83rpx;
	height: 40rpx;
	margin-right: 10rpx;
	font-size: 24rpx;
	font-weight: bold;
	color: #EF2400;
	border: 2rpx solid #EF2400;
	border-radius: 20rpx;
}
.name .pres-name {
	font-weight: bold;
	color: #000000;
}
.pres-item {
	display: flex;
	align-items: center;
	justify-content: center;
	height: 60rpx;
	margin: 0 25rpx;
}
.pres-item.left {
	margin-bottom: 20rpx;
}
.pres-item.pd {
	height: 90rpx;
	margin: 0;
	padding: 0 25rpx;
	border-top: 1rpx solid #DDDDDD;
}
.pres-item.sub-title {
	margin: 0 24rpx 20rpx;
	width: calc(100% - 48rpx);
	background-color: rgba(187,187,187,0.2);
	border-radius: 30rpx;
}
.pres-item.sub-title .pres-sub-item {
	font-weight: normal;
}
.pres-item .pres-sub-item {
	width: 40%;
	text-align: center;
	font-weight: bold;
}
.pres-item .pres-sub-item:nth-child(1) {
	width: 20%;
	text-align: left;
	font-weight: normal;
}
.pres-item .pres-sub-item.pd {
	width: 80%;
	padding-left: 16%;
	text-align: left;
	box-sizing: border-box;
}
.pres-item .pres-sub-item.add {
	position: relative;
	top: 30rpx;
}
