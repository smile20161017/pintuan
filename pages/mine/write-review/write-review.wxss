page {
	background-color: #F5F6F7;
}
.goods-item {
	background-color: #FFFFFF;
	border-bottom: 20rpx solid #F5F6F7;
}
.infor {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 104rpx;
	padding: 0 24rpx;
	border-bottom: 1rpx solid #EEEEEE;
	box-sizing: border-box;
}
.infor .infor-img {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 70rpx;
	height: 70rpx;
	margin-right: 15rpx;
	border: 1rpx solid #DDDDDD;
	border-radius: 8rpx;
	box-sizing: border-box;
}
.infor-img image {
	width: 90%;
	height: auto;
}
.infor-name {
	width: 617rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-size: 26rpx;
	color: #333333;
}
.write {
	padding: 30rpx 24rpx;
	box-sizing: border-box;
}
.write textarea {
	width: 100%;
	height: 200rpx;
	font-size: 28rpx;
}
.add-Img {
	display: flex;
	align-items: center;
	flex-wrap: wrap;
	padding: 0rpx 24rpx 30rpx;
	box-sizing: border-box;
}
.add-Img view {
	margin-right: 26rpx;
}
.add-Img view:nth-child(4n) {
	margin-right: 0;
}
.img-container {
	position: relative;
	width: 157rpx;
	height: 157rpx;
}
.img-container .iconfont {
	position: absolute;
	right: -12rpx;
	top: -18rpx;
	font-size: 44rpx;
	color: #000000;
	z-index: 100;
}
.img-container view {
	position: relative;
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.img-container image {
	position: absolute;
	left: 50%;
	top: 50%;
	width: 100%;
	height: auto;
	transform: translate(-50%, -50%);
}
.add {
	display: flex;
	align-items: center;
	justify-content: center;
	flex-direction: column;
	width: 157rpx;
	height: 157rpx;
	font-size: 28rpx;
	color: #999999;
	border: 2rpx dashed #DDDDDD;
	box-sizing: border-box;
}
.add .iconfont {
	margin-bottom: 10rpx;
	font-size: 54rpx;
}
.submit {
	width: 701rpx;
	height: 90rpx;
	margin: 60rpx auto;
	line-height: 90rpx;
	text-align: center;
	font-weight: bold;
	font-size: 34rpx;
	color: #FFFFFF;
	background: linear-gradient(-90deg, rgba(254, 38, 0, 1) 0%, rgba(239, 36, 0, 1) 100%);
	border-radius: 45rpx;
}