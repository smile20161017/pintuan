/* pages/mine/my-order-detail/my-order-detail.wxss */
page {
	font-size: 26rpx;
	color: #333333;
	background-color: #F5F6F7;
}
.container{
	padding-bottom: 160rpx;
}
.container > view{
	box-sizing: border-box;
	width: 100%;
	background-color: #FFFFFF;
}
.container > .state{
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 170rpx;
	padding: 0 64rpx 0 48rpx;
	color: white;
	background: #EF2400;
}
.state > text:nth-of-type(1){
	font-size: 40rpx;
	font-weight: 400;
}
.state > text:nth-of-type(2){
	font-size: 94rpx;
}
.express {
	display: flex;
	align-items: center;
	box-sizing: border-box;
	padding: 45rpx 24rpx;
}
.express .iconpeisong2 {
	width: 68rpx;
	height: 68rpx;
	text-align: center;
	line-height: 68rpx;
	font-size: 37rpx;
	color: #FFFFFF;
	background-color: #0C84DB;
	border-radius: 50%;
}
.express .iconxiangyou {
	margin-left: 63rpx;
	font-size: 30rpx;
	color: #C9C9C9;
}
.express > view{
	flex: 1;
	margin-left: 18rpx;
}
.express .express-name {
	font-size: 28rpx;
}
.express .express-text {
	line-height: 32rpx;
	font-size: 26rpx;
	font-weight: 400;
	color:rgba(12,132,219,1);
}
.express .express-time {
	margin-top: 18rpx;
	line-height: 38rpx;
	font-size: 26rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
}
.address {
	display: flex;
	align-items: center;
	position: relative;
	height: 188rpx;
	padding: 0 116rpx;
	box-sizing: border-box;
}
.address .icondaohangdizhi {
	position: absolute;
	top: 50%;
	left: 24rpx;
	width: 68rpx;
	height: 68rpx;
	line-height: 68rpx;
	text-align: center;
	color: #FFFFFF;
	background-color: #EF2400;
	border-radius: 50%;
	transform: translateY(-50%);
}
.address .iconxiangyou {
	position: absolute;
	top: 50%;
	right: 24rpx;
	color: #C9C9C9;
	transform: translateY(-50%);
}
.address .address-name {
	font-size: 28rpx;
}
.address .address-tel {
	margin-left: 20rpx;
	color: #999999;
}
.address .address-text {
	margin-top: 10rpx;
	line-height: 32rpx;
}
.box {
	margin-top: 20rpx;
}
.goods{
	padding: 40rpx 24rpx;
}
.product, .pres {
	display: flex;
	align-items: center;
	justify-content: space-between;
	position: relative;
	box-sizing: border-box;
}
.product {
	margin-bottom: 24rpx;
}
.product-img {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 180rpx;
	height: 180rpx;
	border: 1rpx solid #DDDDDD;
	border-radius: 8rpx;
}
.product-img.lens-img {
	height: 90rpx;
	overflow: hidden;
}
.product-img image {
	display: block;
	width: 95%;
}
.product-des {
	width: 370rpx;
	min-height: 100%;
}
.product-name {
	display: block;
	margin-bottom: 15rpx;
	line-height: 36rpx;
}
.product-pres {
	display: block;
	padding: 5rpx 15rpx;
	line-height: 42rpx;
	color: #999999;
	background-color: #F1F1F1;
	border-radius: 8rpx;
	box-sizing: border-box;
}
.product-price {
	width: 100rpx;
	text-align: right;
}
.box .lens {
	display: flex;
	align-items: center;
	justify-content: space-between;
	height: 100rpx;
	padding: 0 24rpx;
	font-size: 28rpx;
	border-top: 1px solid #EEEEEE;
}
.lens .lens-left {
	text-align: right;
}
.lens .lens-right{
	display: flex;
	align-items: center;
}
.lens-right-type{
	box-sizing: border-box;
	width: 83rpx;
	height: 40rpx;
	line-height: 32rpx;
	text-align: center;
	font-size: 24rpx;
	font-weight: bold;
	color: #EF2400;
	border: 2px solid #EF2400;
	border-radius: 20px;
}
.lens-right-name{
	margin-left: 10rpx;
	line-height: 24rpx;
	font-size: 26rpx;
	font-weight:bold;
	color:rgba(0,0,0,1);
}
.lens .iconxiangyou {
	margin-left: 25rpx;
	font-size: 24rpx;
	color: #C9C9C9;
}
.remark{
	display: flex;
	align-items: flex-start;
	justify-content: space-between;
	width: 100%;
	margin-top: 20rpx;
	padding: 48rpx 46rpx 38rpx 24rpx;
}
.remark-left{
	width: 180rpx;
	text-align: right;
	font-size: 28rpx;
	font-weight: 400;
	color:rgba(51,51,51,1);
}
.remark-right{
	flex: 1;
	margin-left: 26rpx;
	line-height:38rpx;
	font-size: 28rpx;
	font-weight:400;
	color:rgba(153,153,153,1);
	overflow: hidden;
	word-break: break-all;
	word-wrap: break-word;
}
.total {
	width: 100%;
	padding: 45rpx 24rpx;
	margin-top: 20rpx;
}
.total > view{
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.total > view > text:nth-of-type(2){
	text-align: right;
}
.total > view:nth-of-type(4){
	margin-top: 10rpx;
}
.total text{
	line-height: 58rpx;
	font-size: 26rpx;
	font-weight: 400;
	color:rgba(102,102,102,1);
}
.total .total-red{
	font-size: 36rpx;
	font-weight: bold;
	color:#EF2400;
}
.info{
	margin-top: 20rpx;
	padding: 40rpx 24rpx;
}
.info-title{
	padding-left: 15rpx;
	height: 28rpx;
	line-height: 28rpx;
	font-size: 28rpx;
	font-weight: 400;
	color:rgba(0,0,0,1);
	border-left: 2px solid #F0130A;
}
.info-wrap{
	margin-top: 40rpx;
}
.info-wrap > view{
	position: relative;
	display: flex;
	align-items: center;
	line-height: 58rpx;
	font-size: 26rpx;
	font-weight:400;
	color:rgba(102,102,102,1);
}
.info-wrap > view > text:nth-of-type(2){
	margin-left: 104rpx;
}
.info-btn{
	position: absolute;
	right: 0;
	color: #EF2400;
}