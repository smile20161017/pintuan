/* pages/mine/my-address/my-address.wxss */
page{
    background: #f5f6f7;
}
.container{
    padding-bottom: 170rpx;
}
.title{
    display: flex;
    flex-flow: nowrap;
    justify-content: space-between;
    align-items: center;
    width: calc(100% - 48rpx);
    height: 90rpx;
    padding: 0 24rpx 0 24rpx;
    font-size: 28rpx;
    font-weight:400;
    color: #333333;
}
.title view .iconfont{
    margin-right: 15rpx;
}
.title .iconweixin{
    padding-top: 10rpx;
    font-size: 36rpx;
    color: #129611;
}
.title .iconxiangyou{
    color: #666666;
}
.list{
    width: 100%;
    height: auto;
    border-radius: 12rpx;
    background: white;
}
.item{
    display: flex;
    flex-wrap: nowrap;
    justify-content: space-between;
    align-items: center;
    padding: 45rpx 24rpx 40rpx;
    width: calc(100% - 48rpx);
    height: auto;
    border-bottom: 1rpx solid #DDDDDD;
}
.item > .iconfont{
    margin-left: 87rpx;
    color: #333333;
    font-size: 32rpx;
}
.item-title{
    font-size: 34rpx;
    line-height: 34rpx;
    font-weight: Bold;
    color: #333333;
}
.item-text{
    margin-top: 25rpx;
    line-height: 38rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #999999;
    overflow: hidden;
    word-break: break-all;
    word-wrap: break-word;
}
.item-text > view{
    display: inline-block;
    padding: 4rpx 13rpx;
    height: 24rpx;
    border: 1rpx solid #EF2400;
    line-height: 24rpx;
    text-align: center;
    font-size: 24rpx;
    font-family: Bold;
    color: #EF2400;
    border-radius: 17rpx;
}
.btn{
    position: fixed;
    bottom: 40rpx;
    width: calc(100% - 48rpx);
    height: 90rpx;
    margin: 0 24rpx 0;
    text-align: center;
    line-height: 90rpx;
    font-size: 34rpx;
    font-weight: 500;
    color: white;
    background: linear-gradient(-90deg, rgba(254,38,0,1) 0%, rgba(239,36,0,1) 100%);
    border-radius: 45rpx;
}