page{
    background: white;
}
.title{
    display: flex;
    flex-flow: nowrap;
    justify-content: space-between;
    align-items: center;
    width: calc(100% - 48rpx);
    height: 90rpx;
    padding: 0 24rpx 0 24rpx;
    font-size: 28rpx;
    color: #333333;
    background: #f3f5f7;
}
.text-red{
    color: #EF2400;
    font-size: 32rpx;
    font-weight:500;
}
.list{
    width: 100%;
    height: auto;
    border-radius: 12rpx;
    background: white;
}
.list-hasBtn{
    padding-bottom: 110rpx;
}
.box{
    display: flex;
    flex-wrap: nowrap;
    align-items: flex-start;
    width: calc(100% - 48rpx);
    padding: 40rpx 24rpx;
    border-bottom: 1px solid #DDDDDD;
}
.icon{
    display: inline-block;
    align-self: center;
    width: 34rpx;
    height: 34rpx;
    margin-right: 25rpx;
    line-height: 34rpx;
    text-align: center;
    font-size: 14rpx;
    color: rgba(0,0,0,0);
    border: 1px solid #DDDDDD;
    border-radius: 50%;
}
.icon-seled{
    border-color: #EF2400;
    background-color: #EF2400;
    color: white;
}
.box image{
    width: 320rpx;
    height: 160rpx;
}
.desc{
    flex: 1;
    margin-left: 26rpx;
    word-wrap: break-word;
    word-break: break-all;
    overflow: hidden;
}
.desc view:nth-of-type(1){
    height: 72rpx;
    font-size: 26rpx;
    font-weight:400;
    line-height: 36rpx;
    text-overflow : ellipsis;
    word-break: break-all;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    color: #333333;
}
.desc view:nth-of-type(2){
    margin-top: 30rpx;
}
.disabled{
    display: inline-block;
    height: 40rpx;
    padding: 0 8rpx 0;
    text-align: center;
    line-height: 40rpx;
    font-size: 28rpx;
    color: white;
    background: #D5D5D5;
    border-radius: 3rpx;
}
.footer{
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 110rpx;
    padding: 0 24rpx 0;
    border-top: 1px solid #DDDDDD;
	background-color: #FFFFFF;
}
.footer .btn{
    box-sizing: border-box;
    width: 280rpx;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    background: #EF2400;
    color: white;
    border-radius:45px;
}
.empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 34rpx;
}
.empty image {
	width: 196rpx;
	padding: 125rpx 0 85rpx;
}