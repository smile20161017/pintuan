.title {
	padding: 45rpx 24rpx;
	font-size: 28rpx;
	color: #EF2400;
	box-sizing: border-box;
}
.title text {
	position: relative;
}
.title text:after {
	display: block;
	position: absolute;
	left: 0;
	bottom: -5rpx;
	width: 100%;
	height: 5rpx;
	background-color: #EF2400;
	content: '';
}
.coupon-wrap {
	padding: 0 24rpx;
	box-sizing: border-box;
}
.coupon-wrap .content-item {
	position: relative;
	display: flex;
	align-items: center;
	width: 702rpx;
	height: 140rpx;
	margin-bottom: 30rpx;
	box-sizing: border-box;
	color: #EF2400;
	border-radius: 8rpx;
}
.coupon-wrap .content-item.done {
	color: #C1C1C1;
}
.coupon-wrap .content-item.done .use {
	border-left-color: #C1C1C1;
}
.coupon-wrap .content-item image {
	position: absolute;
	top: 0;
	left: 0;
	width: 702rpx;
	height: 140rpx;
	z-index: -1;
}
.coupon-wrap .coupon-infor {
	display: flex;
	align-items: center;
	width: 75%;
}
.coupon-wrap .use {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 25%;
	height: 104rpx;
	font-size: 28rpx;
	border-left: 2rpx dashed #EF2400;
}
.coupon-wrap .use text.can {
	display: block;
	width: 127rpx;
	height: 60rpx;
	line-height: 60rpx;
	text-align: center;
	color: #FFFFFF;
	background: linear-gradient(-90deg, rgba(254, 38, 0, 1) 0%, rgba(239, 36, 0, 1) 100%);
	border-radius: 30rpx;
}
.coupon-wrap .price {
	display: flex;
	align-items: baseline;
	width: 170rpx;
	padding-left: 40rpx;
	box-sizing: border-box;
}
.coupon-wrap .content-item .price text:nth-child(1) {
	font-size: 30rpx;
}
.coupon-wrap .content-item .price text:nth-child(2) {
	font-size: 56rpx;
}
.coupon-wrap .content-item .msg {
	display: flex;
	flex-direction: column;
	align-items: flex-start;
	margin: 0 20rpx 0 45rpx;
}
.coupon-wrap .content-item .msg text:nth-child(1) {
	font-size: 26rpx;
	margin-bottom: 5rpx;
}
.coupon-wrap .content-item .msg text:nth-child(2) {
	font-size: 20rpx;
}
.empty {
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 34rpx;
}
.empty image {
	width: 196rpx;
	padding: 125rpx 0 85rpx;
}