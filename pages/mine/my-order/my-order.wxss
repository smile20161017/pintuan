page{
	background: #f3f5f7;
}
.type-list{
	display: flex;
	align-items: center;
	width: 100%;
	height: 100rpx;
}
.type-list > view{
	display: flex;
	justify-content: center;
	align-items: center;
	flex: 1;
	height: 100%;
}
.type-list > view > view{
	padding: 13rpx 0 8rpx;
	line-height: 28rpx;
	font-size: 28rpx;
	font-weight: 400;
	color: #666666;
	border-bottom: 5rpx solid #f3f5f7;
}
.type-list .type-sel{
	color: #EF2400;
	border-bottom-color: #EF2400;
}

.box{
	width: calc(100% - 96rpx);
	height: auto;
	margin: 0 24rpx 30rpx;
	padding: 38rpx 24rpx 25rpx;
	background: white;
	border-radius: 12rpx;
}
.index{
	display: flex;
	justify-content: space-between;
	align-items: center;
	height: 27rpx;
}
.index > text:nth-of-type(1){
	color: black;
	font-size: 28rpx;
	font-weight: bold;
}
.index > text:nth-of-type(2){
	color: #EF2400;
	font-size: 26rpx;
	font-weight: 400;
}

.info{
	margin-top: 30rpx;
}
.info:nth-of-type(1){
	margin-top: 35rpx;
}
.info > view{
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.info > view:nth-of-type(2){
	margin-top: 30rpx;
}
.info-left{
	position: relative;
	width: 180rpx;
	border: 1px solid #DDDDDD;
	border-radius: 8rpx;
}
.info > view:nth-of-type(1) .info-left{
	height: 180rpx;
}
.info > view:nth-of-type(2) .info-left{
	height: 90rpx;
}
.info-left image{
	position: absolute;
	top: 50%;
	left: 50%;
	width: 100%;
	transform: translate(-50%, -50%);
}
.info-middle{
	display: flex;
	flex-direction: column;
	width: 285rpx;
	margin-left: 25rpx;
	font-size: 28rpx;
	font-weight: 400;
}
.info-middle{
	color: #333333;
	line-height: 38rpx;
	word-wrap: break-word;
	word-break: break-all;
	overflow: hidden;
}
