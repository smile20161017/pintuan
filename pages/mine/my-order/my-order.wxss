.info-right{
	display: flex;
	flex-direction: column;
	flex: 1;
	margin-left: 50rpx;
	text-align: right;
	font-weight: 400;
}
.info-right > text{
	font-size: 28rpx;
	line-height: 38rpx;
}
.info-right > text:nth-of-type(1){
	color: #333333;
}
.info-right > text:nth-of-type(2){
	color: #999999;
}

.price{
	display: flex;
	flex-direction: row-reverse;
	align-items: center;
	width: 100%;
	margin-top: 30rpx;
	line-height: 38rpx;
	font-size: 24rpx;
	font-weight: 400;
	color: #333333;
}
.price > text:nth-of-type(1){
	font-size: 30rpx;
	font-weight: bold;
}

.btn-list{
	margin-top: 38rpx;
	display: flex;
	flex-direction: row-reverse;
	align-items: center;
}
.btn{
	width: 204rpx;
	height: 60rpx;
	margin-left: 20rpx;
	text-align: center;
	line-height: 60rpx;
	font-size: 28rpx;
	color: #666666;
	border: 1px solid #D6D6D6;
	border-radius: 30rpx;
}
.btn-red{
	color: #EF2400;
	border-color: #EF2400;
}