page {
	display: flex;
	flex-direction: column;
	height: 100%;
	font-size: 28rpx;
	background-color: #F5F6F7;
}
.index-container {
	display: flex;
	flex-direction: column;
	position: relative;
	width: 100%;
	height: 100%;
	padding-top: 170rpx;
	box-sizing: border-box;
}
.index {
	display: flex;
	flex-direction: column;
	width: 100%;
	height: 100%;
}
.left text {
	font-size: 38rpx;
}
.logo image {
	width: 210rpx;
}
.nav-list {
	display: flex;
	align-items: center;
	justify-content: space-between;
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	padding: 0 20rpx;
	box-sizing: border-box;
	font-size: 22rpx;
	color: #FFFFFF;
	background-color: #000000;
}
.nav-list .nav-item {
	display: flex;
	flex-direction: column;
	align-items: center;
	justify-content: center;
	height: 170rpx;
}
.nav-list .nav-item image {
	width: 110rpx;
	height: 110rpx;
	margin-bottom: 5rpx;
	border-radius: 50%;
}
swiper {
	width: 100%;
	height: 750rpx;
}
swiper image {
	width: 100%;
	height: 750rpx;
}
.classify-warp {
	padding: 0 24rpx;
	background-color: #FFFFFF;
	margin-bottom: 20rpx;
}
.classify-warp .title {
	padding: 20rpx 0;
	font-size: 26rpx;
	color: #666666;
}
.classify-banner {
	width: 100%;
	margin-bottom: 60rpx;
}
.classify-list {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.classify-list .item {
	width: 320rpx;
	margin-bottom: 60rpx;
}
.classify-list .item image {
	width: 100%;
	margin-bottom: 20rpx;
}
.classify-list .item .infor {
	display: flex;
	align-items: center;
	justify-content: center;
}
.classify-list .item .infor .price {
	font-weight: bold;
	font-size: 36rpx;
	color: #EF2400;
}
.classify-list .item .infor .price text {
	font-size: 20rpx;
}
.classify-list .item .infor .check {
	margin-left: 15rpx;
	padding: 5rpx 10rpx;
	font-size: 18rpx;
	color: #FFFFFF;
	background-color: #EF2400;
}

.product-warp {
	padding: 0 24rpx;
}
.product-warp .title {
	padding: 12rpx 0 32rpx;
	text-align: center;
	font-size: 32rpx;
}
.product-container {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}
.product-container .product {
	display: flex;
	flex-direction: column;
	width: 344rpx;
	margin-bottom: 20rpx;
	padding: 50rpx 15rpx 30rpx;
	background: #ffffff;
	border-radius: 8rpx;
	box-sizing: border-box;
}
.product-container .product image {
	width: 100%;
	margin-bottom: 30rpx;
}
.product-title {
	display: -webkit-box;
	-webkit-box-orient: vertical;
	-webkit-line-clamp: 2;
	overflow: hidden;
	margin-bottom: 20rpx;
	font-size: 26rpx;
}
.product-price {
	display: flex;
	align-items: center;
	justify-content: space-between;
	font-size: 24rpx;
	color: #999999;
}
.product-price text:nth-child(1) {
	font-size: 32rpx;
	color: #ef2400;
}
.advise image {
	display: block;
	width: 100%;
}
